{
  "author": "Gael Herrera",
  "description": "This is a sample project for the cres tool",

  "compiler": {
    "command": "gcc",
    "args": ["-o", "build/sample"]
  },
  "finder": {
    "entry": {
      "strategy": "'FILE_ID'|'PATH'"
    },
    "header": {
      "strategy": "'RELATIVE'|'PARALLEL_LEVEL'|'PARALLEL_FLAT'",
      "dir": "include"
    }
  },

  "lib": {
    "source": {
      "dirs": ["lib/source"]
    },
    "dynamic": {
      "dirs": ["lib/dynamic"],
      "should-duplicate-out": true
    },
    "static": {
      "dirs": ["lib/static"]
    }
  },

  "run": {
    "entry": "main.c"
  },
  "prefix": {},
  "header": {}
}
